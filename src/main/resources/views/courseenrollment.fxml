<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zinko.studentmanagement.controller.CourseEnrollmentController">
    <children>
        <HBox alignment="CENTER" styleClass="title" stylesheets="@style.css">
            <children>
                <Label text="Course Enrollment" />
            </children>
        </HBox>
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
               <ComboBox fx:id="courses" prefWidth="600.0" promptText="Select Course" styleClass="combobox" />
               <ComboBox fx:id="students" prefWidth="600.0" promptText="Select Student" styleClass="combobox" />
              <Button mnemonicParsing="false" text="Enroll" onAction="#enrollment"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
    </children>
</VBox>
